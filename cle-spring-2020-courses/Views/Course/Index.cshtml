@model IEnumerable<cle_spring_2020_courses.Models.Course>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h1>Course List</h1>
    @foreach(var course in Model)
    {
        <h3>Name: @course.Name</h3>
        <a href="/Course/Details/@course.Id">Details</a>
        <hr />
    }

    <a href="/Course/Create">Add a new course</a>
</body>
</html>
